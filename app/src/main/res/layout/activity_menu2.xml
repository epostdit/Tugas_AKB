<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbHorizontal="@android:color/background_dark"
    tools:context=".Menu2">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="18dp"
            android:fontFamily="@font/rubik_regular"
            android:text="Belum Punya Kode Keluarga?"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="34dp"
            android:layout_marginVertical="30dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/custom_button1"
            android:text="Beli Kode Keluarga Disini"
            android:textColor="#000"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/nunito_bold"
        android:text="Kode Keluarga"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editText5"
        android:layout_width="332dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="478dp"
        android:background="@drawable/textviewstyle"
        android:backgroundTint="#00FFFFFF"
        android:backgroundTintMode="src_atop"
        android:ems="10"
        android:gravity="center"
        android:hint="Masukkan Kode Keluarga"
        android:inputType="textPersonName"
        android:scrollbarThumbHorizontal="@android:color/background_dark"
        android:scrollbarThumbVertical="@android:color/background_dark"
        android:textColor="@android:color/background_dark"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="43dp" />

    <Button
        android:id="@+id/Button3"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="311dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_button"
        android:text="Masuk"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="276dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="110dp"
        android:text="Ketikan kode keluarga yang Ayah Bunda miliki disini"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="158dp"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="273dp"
        android:text="TextView" />

</RelativeLayout>